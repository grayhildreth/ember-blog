{{#if addNewEvent}}
<h1>New Event</h1>
<div>
  <form>
    <div class="form-group">
      <label for="band">Band</label>
      {{input value=band id="band"}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{input value=city id="city"}}
    </div>

    <div class="form-group">
      <label for="venue">Venue</label>
      {{input value=venue id="venue"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button id="newEvent" {{action 'saveEvent1'}}>Save</button>
  </form>
</div>
{{else}}
<button id="newEvent" {{action 'eventFormShow'}}>New Event</button>
{{/if}}
