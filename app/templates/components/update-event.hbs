{{#if updateEventForm}}
<h1>Update {{event.band}}'s {{event.date}} concert</h1>
<div>
  <form>
    <div class="form-group">
      <label for="band">Band</label>
      {{input value=band id="band" placeholder=event.band}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{input value=city id="city" placeholder=event.city}}
    </div>

    <div class="form-group">
      <label for="venue">Venue</label>
      {{input value=venue id="venue" placeholder=event.venue}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=event.date}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" placeholder=event.image}}
    </div>

    <button {{action 'update' event}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateEventForm'}}>Update Event</button>
{{/if}}
